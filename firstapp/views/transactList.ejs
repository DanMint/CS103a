
<h1> Transactions for <%= user.username %> </h1>

  <div class="row">
    <div class="col">
        <p> Here is your list of transactions! </p>
        <table>
            <tr>
                <th>Description</th>
                <th>Amount</th>
                <th>Category</th>
                <th>Date</th>
                <th>Delete</th>
                <th>Edit</th>
            </tr>
            <% items.forEach(item => { %>
                <tr>
                    <td><%= item.description %></td>
                    <td><%= item.amount %></td>
                    <td><%= item.category %></td>
                    <td><%= item.date %></td>
                    <td>
                        <a href="/transact/delete/<%=item._id %>">
                            <i class="bi bi-trash"></i>
                        </a>
                    </td>
                    <td>
                        <a href="/transact/edit/<%=item._id %>">
                            <i class="bi bi-pencil-square"></i>
                        </a>
                    </td>
                </tr>
            <% }) %>
        </table>
        <br>
        <h1> Add a new transaction </h1>
        <form method="post" action="transact">
            new transaction: <input type="text" name="description">
            <br>
            amount: <input type="number" name="amount">
            <br>
            category: <input type="text" name="category">
            <br>
            <input type="submit" value="add transaction">
        </form>
      </div>
    </div>
</div>
